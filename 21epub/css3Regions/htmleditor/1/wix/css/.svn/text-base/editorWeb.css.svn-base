/***** Typography ********/

/* Regular */
body {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 14px;
}

/* Italic */

em, i, .italic{
    font-family: "Helvetica Neue Italic", Helvetica, Arial, sans-serif;
    font-size: 14px;
}
.isPlaceholder{
    font-family: "Helvetica Neue Italic", Helvetica, Arial, sans-serif;
    font-size: 14px;
}
::-webkit-input-placeholder{
    font-family: "Helvetica Neue Italic", Helvetica, Arial, sans-serif;
    font-size: 14px;
}
:-moz-placeholder{
    font-family: "Helvetica Neue Italic", Helvetica, Arial, sans-serif;
    font-size: 14px;
}

/* Bold (Medium) */
b, strong, .bold, .tbLabel{
    font-family: "Helvetica Neue Medium", Helvetica, Arial, sans-serif;
    font-size: 14px;
}

/* Bold (Medium) */
.thin{
    font-family: "Helvetica Neue Thin", Helvetica, Arial, sans-serif;
    font-size: 14px;
}


/* Typography END */


#EDITOR_STRUCTURE {
    width: 960px;
    margin: 0 auto;
    text-align: left;
}

/* Editor Container */

.editorContainer {
    overflow: hidden;
}

/* Site Pages */

#SITE_PAGES {
    float: left;
    width: 700px;
}

#SITE_PAGES .right {
    float: right;
}

#SITE_PAGES .left {
    float: left;
}

.sitePage {
    overflow: hidden;
}

/* Graphic Buttons */
.topBarBTN {
    height:20px;
    margin-left: 15px;
    padding-left: 25px;
    padding-top:9px;
    margin-top:5px;
    display: inline-block;
    cursor: pointer;
    font-weight: bold;

}

#pageMenuContainer {
    display: inline-block;
    background-color: #dddddd;
    margin-left: 100px;
    margin-top: -20px;
}

*:not(input):not(textarea) {
    -khtml-user-select: none;
    -webkit-user-select: none;
    -o-user-select: none;
    user-select: none;
}

.selectable,
.selectableChildren *{
    -khtml-user-select: text;
   -webkit-user-select: text;
   -o-user-select: text;
   user-select: text;
    -moz-user-select: text;
}

textarea, input, select {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
	-moz-box-sizing: border-box;    /* Firefox, other Gecko */
	box-sizing: border-box;         /* Opera/IE 8+ */
}

.hidden {
    display: none !important;
}

.visible {
    display: block;
}

/* Preview fixed scrolling */
#previewContainer.fixed {
    position: fixed;
    top: 45px;
}
#progressBar.fixed {
    position: fixed;
    top: 538px;
    margin-left:33px;
}
/* Preloader */
#editor_preloader {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
}
#editor_preloader.editorLoading {
    /*background-color: #FFFFFF;*/
    background: #FFFFFF url(../../images/wysiwyg/editor/editor_loading.gif) no-repeat 50% 50%;
}
#editor_preloader.siteLoading {
    background: rgba(255, 255, 255, 0.5) url(../../images/wysiwyg/editor/editor_loading.gif) no-repeat 50% 50%;
}
#editor_preloader.ready {
    display:none;
}

/*See AutoPanel.js*/
.inline-component {display: inline-block; vertical-align: top}

