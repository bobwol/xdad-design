/* Helvetica fonts are loaded in fontFace.css from public */

/* Reset */
/* TODO shouldn't this be * ? */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td {
    margin: 0;
    padding: 0;
    border: 0;
    outline: 0;
    vertical-align: baseline;
    background: transparent;
}

ol, ul {
    list-style: none;
}

blockquote, q {
    quotes: none;
}

:focus {
    outline: 0;
}

ins {
    text-decoration: none;
}

del {
    text-decoration: line-through;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

a {
    color:#379ACF;
    text-decoration: none;
    cursor: pointer;
}

/* Contain floats: h5bp.com/q */
.clearfix:before, .clearfix:after { content: ""; display: table; }
.clearfix:after { clear: both; }
.clearfix { zoom: 1; }


/* Webkit ScrollBar appearance for editor panels
 * Also forces the scroll bars on MacOSX to stay visible*/
#EDITOR_STRUCTURE ::-webkit-scrollbar,
#dialogLayer ::-webkit-scrollbar{
    -webkit-appearance: none;
    width: 10px;
    height: 10px;
}
#EDITOR_STRUCTURE ::-webkit-scrollbar-thumb,
#dialogLayer ::-webkit-scrollbar-thumb{
    border-radius: 8px;
    border: 2px solid #fdfdfd; /* should match background, can't be transparent */
    background-color: rgba(0,0,0,.5);
}

